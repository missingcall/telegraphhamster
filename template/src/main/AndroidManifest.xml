<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aries.smart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name="com.aries.smart.App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:roundIcon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.aries.smart.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:theme="@style/NormalSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.aries.smart.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:launchMode="singleTop" />

        <activity
            android:name=".module.login.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />

        <activity
            android:name=".module.login.SignInActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />

        <activity
            android:name=".module.login.SignUpActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />

        <activity
            android:name=".module.login.FindPasswordStep1Activity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />

        <activity
            android:name=".module.login.FindPasswordStep2Activity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />

        <activity
            android:name=".module.login.FindPasswordStep3Activity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            />


        <!-- 应用内浏览器 -->
        <activity
            android:name="com.aries.smart.WebViewActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:label="@string/fast_loading" />
    </application>

</manifest>