<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include layout="@layout/fast_layout_title_bar" />

    <TextView
        android:id="@+id/tv_phone_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center"
        android:text="@string/improve_account_security"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar_headFastLib" />


    <com.aries.smart.module.widget.ClearEditText
        android:id="@+id/cet_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center|left"
        android:hint="@string/new_password"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_gray_aaa"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_verify" />


    <com.aries.smart.module.widget.ClearEditText
        android:id="@+id/cet_psw_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center|left"
        android:hint="@string/new_password_again"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_gray_aaa"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintLeft_toLeftOf="@id/cet_psw"
        app:layout_constraintRight_toRightOf="@id/cet_psw"
        app:layout_constraintTop_toBottomOf="@id/cet_psw" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_60"

        android:layout_marginBottom="@dimen/margin_30"
        android:background="@drawable/shape_next_bg"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/cet_psw"
        app:layout_constraintRight_toRightOf="@id/cet_psw" />


</androidx.constraintlayout.widget.ConstraintLayout>