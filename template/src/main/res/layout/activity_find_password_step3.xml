<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include layout="@layout/fast_layout_title_bar" />

    <TextView
        android:id="@+id/tv_phone_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/improve_account_security"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar_headFastLib" />


    <LinearLayout
        android:id="@+id/ll_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_verify">


    </LinearLayout>


    <com.aries.smart.module.login.widget.ClearEditText
        android:id="@+id/cet_psw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@null"
        android:gravity="center|left"
        android:hint="@string/new_password"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_gray_aaa"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@id/ll_psw"
        app:layout_constraintLeft_toLeftOf="@id/ll_psw"
        app:layout_constraintRight_toRightOf="@id/ll_psw"
        app:layout_constraintTop_toTopOf="@id/ll_psw" />


    <LinearLayout
        android:id="@+id/ll_psw_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_psw">

    </LinearLayout>

    <com.aries.smart.module.login.widget.ClearEditText
        android:id="@+id/cet_psw_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@null"
        android:gravity="center|left"
        android:hint="@string/new_password_again"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_gray_aaa"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@id/ll_psw_again"
        app:layout_constraintLeft_toLeftOf="@id/ll_psw_again"
        app:layout_constraintRight_toRightOf="@id/ll_psw_again"
        app:layout_constraintTop_toTopOf="@id/ll_psw_again" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:background="@drawable/shape_next_bg"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/confirm"
        android:textSize="@dimen/text_size_huge"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>